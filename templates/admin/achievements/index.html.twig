{% extends 'base_admin.html.twig' %}

{% block title %}Liste des réalisations{% endblock %}

{% block body %}
    <section class="py-5">
        <div class="container-fluid">
            <div class="row align-items-center justify-content-between">
                <div class="col-lg-10">
                    <h1 class="display-1">
                        Liste des réalisations
                    </h1>
                </div>
                <div class="col-lg-2">
                    <div class="d-grid gap-2">
                        <a class="btn btn-secondary-custom" title="Ajouter une mise à jour" href="{{ path('achievements_new') }}">
                            <i class="bi bi-file-earmark-plus"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# List section #}
    <section class="bg-glass py-5 px-2">
        <div class="table-responsive">
            <table class="table tables-sm">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Date de création
                        </th>
                        <th>
                            Date de modification
                        </th>
                        <th>
                            Nom
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Date de lancement
                        </th>
                        <th>
                            Date de fin
                        </th>
                        <th>
                            Statut
                        </th>
                        <th>
                            Lien vers dépot Git
                        </th>
                        <th>
                            Lien http
                        </th>
                        <th>
                            Date de mise en ligne
                        </th>
                        <th>
                            Date de mise à jour
                        </th>
                        <th>
                        </th>
                    </tr>
                </thead>
                <tbody>
                {% for achievement in achievements %}
                    <tr>
                        <td>{{ achievement.id }}</td>
                        <td>{{ achievement.createdAt ? achievement.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ achievement.modifiedAt ? achievement.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ achievement.name }}</td>
                        <td>{{ achievement.content|raw }}</td>
                        <td>{{ achievement.startDate ? achievement.startDate|date('Y-m-d') : '' }}</td>
                        <td>{{ achievement.endDate ? achievement.endDate|date('Y-m-d') : '' }}</td>
                        <td>{{ achievement.statut }}</td>
                        <td>{{ achievement.gitLink }}</td>
                        <td>{{ achievement.httpLink }}</td>
                        <td>{{ achievement.releaseDate ? achievement.releaseDate|date('Y-m-d') : '' }}</td>
                        <td>{{ achievement.updateDate ? achievement.updateDate|date('Y-m-d') : '' }}</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a class="btn btn-outline-secondary-custom" title="Détail" href="{{ path('achievements_show', {'id': achievement.id}) }}">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a class="btn btn-outline-warning" title="Modifier" href="{{ path('achievements_edit', {'id': achievement.id}) }}">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                {{ include('admin/achievements/_delete_form.html.twig') }}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="13">Pas d'enregistrement</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </section>

{% endblock %}
